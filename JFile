pipeline {
  agent any
  stages { 
    stage('Build') { 
      steps {
        echo 'Build App'  
      } 
    } 
    stage('Test') {
      steps {
        echo 'Test app'
      } 
    } 
    stage('Deploy') {
      steps {
        echo 'Delopy App'   
      } 
    } 
  
    stage('Run Java Code') {
      steps {
        echo 'Running the Java code...'
        sh 'java -jar your_java_code.jar'
  } 
}
  post {
    always
    { 
      emailext body: 'Summary ', subject: 'Pipeline code status ', to: 'amirSilta@gmail.com'
    }
  }
